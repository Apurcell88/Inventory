    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/output.css" >
</head>
<body class="bg-black">
    <%- include('../partials/nav.ejs') %>
    <div class="bg-black h-screen grid grid-cols-6">
        <%- include('../partials/aside.ejs') %>
        
        <div class="col-span-5 text-white flex items-center justify-center min-h-screen">
          <div class="bg-gray-800 p-10 rounded-xl shadow-lg w-full max-w-lg">
            <h1 class="text-2xl font-semibold mb-6 text-center"><%= title %></h1>
        
            <form action="/genres/create" method="POST" class="space-y-4">
              <div>
                <label for="catergory" class="block mb-1">Genre: </label>
                <input type="text" id="category" name="category" class="w-full p-2 rounded bg-gray-700 border border-gray-600" required>
                <input type="submit" value="Add Genre"
                       class="w-full bg-green-600 hover:bg-green-500 p-2 rounded font-semibold cursor-pointer mt-4">
              </div>
            </form>
          </div>
        </div>
        
        
    </div>
